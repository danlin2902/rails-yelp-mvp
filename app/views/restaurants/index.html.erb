<h1>Restaurants</h1>
<ul><% @restaurants.each do |rest| %>
  <li class="rest-name"><%= link_to rest.name, restaurant_path(rest) %></li>
  <li class="rest-address"><%= "Address: " +  rest.address %></li>
  <li class="rest-number"><%= "Phone: " +  rest.phone_number %></li>
  <li class="rest-cat"><%= "Category: " + rest.category %></li>
    <% end %></ul>
